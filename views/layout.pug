doctype html
html
  head
    title= title
    link(
      rel="stylesheet",
      href="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha2/css/bootstrap.min.css",
      integrity="sha384-DhY6onE6f3zzKbjUPRc2hOzGAdEf4/Dz+WJwBvEYL/lkkIsI3ihufq9hk9K4lVoK",
      crossorigin="anonymous")
    link(rel="stylesheet"  href="stylesheets/style.css")
    script(
      src="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha2/js/bootstrap.bundle.min.js",
      integrity="sha384-BOsAfwzjNJHrJ8cZidOg56tcQWfp6y72vEJ8xQ9w6Quywb24iOsW913URv1IS4GD",
      crossorigin="anonymous")

    link(rel='stylesheet', href='/stylesheets/style.css')
    script(src="/dateformat.js", type='text/javascript')

  body
    header
      nav.navbar.navbar-expand-sm.navbar-dark.bg-dark.shadow
        .container
          ul.navbar-nav
            li.nav-item
              a.nav-link(href="/" class={active: currentUrl === "/"}) Home
            if user
                li.nav-item
                  a.nav-link(href="/click-fablab/mesdonnees") Mes données
                if user.can("equipementList")
                  li.nav-item
                    a.nav-link(href="/click-fablab/equipement" class={active: currentUrl === "/click-fablab/equipement"}) Equipement
                if user.can("utilisationList")
                  li.nav-item
                    a.nav-link(href="/click-fablab/utilisation" class={active: currentUrl === "/click-fablab/utilisation"}) Utilisation
                if user.can("factureList")
                  li.nav-item
                    a.nav-link(href="/click-fablab/facture" class={active: currentUrl === "/click-fablab/facture"}) Facturation
                if user.can("utilisateurList")
                  li.nav-item
                    a.nav-link(href="/click-fablab/utilisateur" class={active: currentUrl === "/click-fablab/utilisateur"}) Utilisateur
                if user.can("roleList")
                  li.nav-item
                    a.nav-link(href="/click-fablab/role" class={active: currentUrl === "/click-fablab/role"}) Rôle
                li.nav-item
                  a.nav-link(href="/logout") Logout


            if !user
              li.nav-item
                a.nav-link(href="/login" class={active: currentUrl === "/login"}) Login

    main
      .container
        section
          block content



